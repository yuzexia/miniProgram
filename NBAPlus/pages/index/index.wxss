/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128px;
  height: 128px;
  margin: 20px;
  border-radius: 50%;
}
.click-btn{
  margin-top:10px;
}
.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.container{
  padding:0 0 45px 0;
}
.con-lists{
  width:100%;
  height:auto;
  /*padding:0 20px;*/
  box-sizing:border-box;
  color:#1d2f49;
  background:#fff;
}
.con-list{
  display:block;
  width:100%;
  height:45px;
  padding:0 0 0 20px;
  line-height:45px;
}
.list-box-group{
  display:inline-block;
  vertical-align:middle;
  width:100%;
  height:auto;
  font-size:0;
}
.group-checkbox{
  display:inline-block;
  vertical-align:middle;
  margin-right:10px;
  color:#a4acb6;
}
.group-label{
  display:inline-block;
  vertical-align:middle;
  height:45px;
  line-height:45px;
  font-size:18px;
}
.done-list{
  background:#fff;
}
.done-list{
  color:#c3c8cf;
  text-decoration:line-through;
}
.section{
  position:fixed;
  bottom:0;
  display:block;
  width:100%;
  height:45px;
  padding:0 20px;
  line-height:45px;
  font-size:0;
  box-sizing:border-box;
}
/*done-list*/
.done-title{
  display:block;
  width:100%;
  height:25px;
  line-height:25px;
  text-indent:20px;
  text-align:left;
  font-size:12px;
  color:#95a0b5;
  background:#e7ecfd;
}
.bottom-section{
  box-shadow:0 -2px 5px rgba(0,0,0,.5);
  background:#fff;

}
.text-input{
  display:inline-block;
  vertical-align:middle;
  width:80%;
  height:45px;
  padding-left:15px;
  line-height:45px;
  font-size:16px;
  box-sizing:border-box;
  color:#1d2f49;
}
.text-btn{
  display:inline-block;
  vertical-align:middle;
  margin:0;
  padding:0;
  width:20%;
  height:30px;
  line-height:30px;
  box-sizing:border-box;
}
